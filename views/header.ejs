<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='http://static.alipayobjects.com/gallery/normalize/3.0.0/normalize.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/markdown.css' />
    <script charset="utf-8" id="seajsnode" src="http://static.alipayobjects.com/??seajs/seajs/2.2.0/sea.js,seajs/seajs-combo/1.0.1/seajs-combo.js,seajs/seajs-style/1.0.2/seajs-style.js"></script>
    <script>
    seajs.config({
      alias: {
        '$': 'jquery/jquery/1.10.1/jquery'
      }
    });
    </script>
  </head>
  <body>
  <header>
    <div class="container">
      <h1 id="logo" title="spmjs - static package manager"><a href="/">spmjs</a></h1>
      <div class="search-form">
        <form method="get" action="/search">
          <input class="text" name="q" type="search" placeholder="Search Packages">
        </form>
        <i class="iconfont">&#xe605;</i>
      </div>
      <ul class="navigation">
        <li>
          <a href="/packages">
            <i class="iconfont">&#xf0174;</i>
            Packages
          </a>
        </li>
        <li>
          <a href="/doc">
            <i class="iconfont">&#xf00ca;</i>
            Docs
          </a>
        </li>
        <li>
          <a href="https://github.com/spmjs/spm">
            <i class="iconfont">&#xf0036;</i>
            Cli</a>
        </li>
        <% if (!anonymous) { %>
        <% if (user) { %>
        <li>
          <a href="/account">
            <i class="iconfont">&#xf0006;</i>
            <%= user.login %>
          </a>
        </li>
        <li>
          <a href="/logout">
            <i class="iconfont">&#xf0204;</i>
            logout
          </a>
        </li>
        <% } else { %>
        <li>
          <a id="login" href="/login">
            <i class="iconfont">&#xf01ca;</i>
            <span>Sign in</span>
          </a>
        </li>
        <% } %>
        <% } %>
      </ul>
    </div>
  </header>
  <script>
  seajs.use(['$'], function($) {
    $('#login').click(function() {
      $(this).find('span').html('Login..');
    });
  });
  </script>
  <section class="index-banner">
    <div class="container">
      <h2>spm</h2>
      <p>The brand new static package manager for browser.</p>
      <a class="button positive" href="/doc">
        <i class="iconfont">&#xf00f6;</i>
        Getting Started
      </a>
      <a class="button negative" href="/packages">
        <i class="iconfont">&#xf0174;</i>
        Packages
      </a>
    </div>
  </section>
  <section class="main container">
